<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_layout_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_line"
        android:orientation="horizontal"
        android:padding="@dimen/x5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingBottom="@dimen/x8"
            android:paddingLeft="@dimen/x8"
            android:paddingTop="@dimen/x8"
            android:text="就诊卡号"
            android:textColor="@color/textPuTong"
            android:textSize="17dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_card_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.7"

            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入就诊卡号"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/textTitle"

                />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_line"

        android:orientation="horizontal"
        android:padding="@dimen/x5"

        >

        <TextView
            android:id="@+id/tv_hos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingBottom="@dimen/x8"
            android:paddingLeft="@dimen/x8"
            android:paddingTop="@dimen/x8"
            android:text="所属医院"
            android:textColor="@color/textPuTong"
            android:textSize="17dp"

            />


        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sp_hos"
            android:layout_width="0dp"
            android:layout_weight="2.7"
            android:layout_height="wrap_content"
            android:gravity="right"
            >

        </android.support.v7.widget.AppCompatSpinner>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_line"

        android:orientation="horizontal"

        android:padding="@dimen/x5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingBottom="@dimen/x8"
            android:paddingLeft="@dimen/x8"
            android:paddingTop="@dimen/x8"
            android:text="证件号码"
            android:textColor="@color/textPuTong"
            android:textSize="17dp"

            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_card_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.7">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_card_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入身份证号码"
                android:imeActionLabel="下一行"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/textTitle" />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_line"

        android:orientation="horizontal"

        android:padding="@dimen/x5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingBottom="@dimen/x8"
            android:paddingLeft="@dimen/x8"
            android:paddingTop="@dimen/x8"
            android:text="姓名"
            android:textColor="@color/textPuTong"
            android:textSize="17dp"

            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.7">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入姓名"
                android:imeActionLabel="下一行"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/textTitle" />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_line"

        android:orientation="horizontal"

        android:padding="@dimen/x5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingBottom="@dimen/x8"
            android:paddingLeft="@dimen/x8"
            android:paddingTop="@dimen/x8"
            android:text="手机号"
            android:textColor="@color/textPuTong"
            android:textSize="17dp"

            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.7">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入手机号"
                android:imeActionLabel="下一行"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/textTitle" />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/x35"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:layout_marginTop="@dimen/x5"
        android:background="@drawable/touch_btn_selector"
        android:padding="@dimen/x10"
        android:text="确定"
        android:textColor="@color/white"
        android:layout_gravity="center"
        />

</LinearLayout>
