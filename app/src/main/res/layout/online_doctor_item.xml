<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/img_doctor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/x5"
        android:layout_weight="1"
        android:src="@mipmap/doctor_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:background="@drawable/bottom_line"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x10"
        android:paddingLeft="@dimen/x5"
        android:paddingRight="@dimen/x5"
        android:paddingTop="@dimen/x10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医生姓名"
                android:textColor="@color/textTitle"
                android:textSize="@dimen/x20" />

            <TextView
                android:id="@+id/tv_doctor_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/x5"
                android:text="医生等级"
                android:textColor="@color/textTitle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/touch_bg_rectangle"
                android:padding="@dimen/x5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="当前等待" />

                <TextView
                    android:id="@+id/tv_wait_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x5"
                    android:text="10"
                    android:textColor="@color/textDoctorGood" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_hospital_dep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="医院名称    所在科室"
            android:textColor="@color/textTitle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="擅长:"
            android:textColor="@color/textDoctorGood" />

        <TextView
            android:id="@+id/tv_doctor_good"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="医生擅长详情" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_doctor_homepage"
                android:layout_width="@dimen/x60"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x7"
                android:background="@drawable/touch_bg_green_rectangle"
                android:gravity="center"
                android:padding="@dimen/x2"
                android:textColor="@color/colorPrimary"
                android:text="医生主页" />


            <TextView
                android:id="@+id/tv_wenzen"
                android:layout_width="@dimen/x60"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x7"
                android:background="@drawable/touch_bg_green_rectangle"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:padding="@dimen/x2"
                android:text="问诊" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
