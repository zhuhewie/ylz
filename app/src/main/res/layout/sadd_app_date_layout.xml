<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="@dimen/app_date_choose_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/text_add_date_title"

            android:layout_width="match_parent"
            android:layout_height="@dimen/app_date_choose_height"
            android:layout_weight="1"
            android:background="@drawable/touch_bg_rectangle"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="排班" />

        <TextView
            android:id="@+id/text_add_am_title"

            android:layout_width="match_parent"
            android:layout_height="@dimen/app_date_choose_height"
            android:layout_weight="1"
            android:background="@drawable/touch_bg_rectangle"
            android:gravity="center"
            android:text="上午" />
        <TextView
            android:id="@+id/text_add_pm_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_date_choose_height"
            android:layout_weight="1"
            android:background="@drawable/touch_bg_rectangle"
            android:gravity="center"
            android:text="下午" />

    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_app_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
