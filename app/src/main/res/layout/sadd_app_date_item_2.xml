<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/app_date_choose_width"
    android:layout_height="@dimen/app_date_choose_height"
    android:background="@drawable/touch_bg_grey_borde_green_rectangle"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_am_lv_money"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:layout_gravity="center"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/text_am_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/text_am_app_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>
