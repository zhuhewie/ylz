<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_inspect_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/x5"
        android:layout_margin="@dimen/x5"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/x5">

            <TextView
                android:id="@+id/tv_checkout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="3"
                android:ellipsize="marquee"
                android:text="尿常规+尿沉"
                android:textSize="@dimen/x15" />

            <TextView
                android:id="@+id/tv_checkout_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x5"
                android:text="2016-07-01"
                android:textColor="@color/textPuTong"
                android:textSize="@dimen/x13" />

            <ImageView
                android:id="@+id/img_next"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_marginRight="@dimen/x8"
                android:src="@mipmap/body_ico_next_2x" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>