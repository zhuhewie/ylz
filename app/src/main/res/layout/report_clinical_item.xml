<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_line"
    android:orientation="vertical"
    android:padding="@dimen/x5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清远市中医院"
            android:textColor="@color/textTitle"
            android:layout_margin="@dimen/x5"
            android:textSize="@dimen/x18" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_new"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x15"
            android:layout_gravity="top"
            fresco:placeholderImage="@mipmap/btn_new_icon" />


        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_write_red_border"
            android:gravity="center"
            android:layout_margin="@dimen/x5"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:text="住院"
            android:textColor="@color/colorFF0C55" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x5"
        android:paddingTop="@dimen/x5">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/x20"
            android:layout_height="match_parent"
            fresco:placeholderImage="@mipmap/bottom_btn_yishi" />


        <TextView
            android:id="@+id/tv_doctor"
            android:layout_width="@dimen/x70"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="主治医师    :"
            />


        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="李医生" />

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="2016-08-06" />


    </LinearLayout>


</LinearLayout>
