<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_layout_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_left_depa"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/backgroundDepartmentLeft"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_right_depa"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:background="@color/backgroundDepartmentUnselect"
        />

    </LinearLayout>

</LinearLayout>
