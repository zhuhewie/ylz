<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line"
            android:orientation="horizontal"
            android:padding="@dimen/x5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:paddingBottom="@dimen/x8"
                android:paddingLeft="@dimen/x8"
                android:paddingTop="@dimen/x8"
                android:text="所属医院"
                android:textColor="@color/textPuTong"
                android:textSize="17dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_hospital"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.7"

                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tiet_hospital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="所属医院"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textColor="@color/textTitle"

                    />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line"

            android:orientation="horizontal"
            android:padding="@dimen/x5"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:paddingBottom="@dimen/x8"
                android:paddingLeft="@dimen/x8"
                android:paddingTop="@dimen/x8"
                android:text="姓名"
                android:textColor="@color/textPuTong"
                android:textSize="17dp"

                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_card_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="2.7">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tiet_card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入就诊人姓名"
                    android:inputType="text"
                    android:imeActionLabel="下一行"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textTitle" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line"

            android:orientation="horizontal"

            android:padding="@dimen/x5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:paddingBottom="@dimen/x8"
                android:paddingLeft="@dimen/x8"
                android:paddingTop="@dimen/x8"
                android:text="性别"
                android:textColor="@color/textPuTong"
                android:textSize="17dp"

                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_card_sex"

                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="2.7">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tiet_card_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入性别"
                    android:inputType="text"
                    android:imeActionLabel="下一行"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textTitle" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line"

            android:orientation="horizontal"

            android:padding="@dimen/x5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:paddingBottom="@dimen/x8"
                android:paddingLeft="@dimen/x8"
                android:paddingTop="@dimen/x8"
                android:text="证件"
                android:textColor="@color/textPuTong"
                android:textSize="17dp"

                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_card_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.7">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tiet_card_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入证件类型"
                    android:inputType="text"
                    android:imeActionLabel="下一行"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textTitle" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line"
            android:orientation="horizontal"

            android:padding="@dimen/x5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:paddingBottom="@dimen/x8"
                android:paddingLeft="@dimen/x8"
                android:paddingTop="@dimen/x8"
                android:text="证件号"
                android:textColor="@color/textPuTong"
                android:textSize="17dp"

                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_card_idcard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.7">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tiet_card_idcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入身份证号"
                    android:inputType="number"
                    android:imeActionLabel="下一行"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textTitle" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line"
            android:orientation="horizontal"

            android:padding="@dimen/x5"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:paddingBottom="@dimen/x8"
                android:paddingLeft="@dimen/x8"
                android:paddingTop="@dimen/x8"
                android:text="年龄"
                android:textColor="@color/textPuTong"
                android:textSize="17dp"

                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.7">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tiet_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入年龄"
                    android:inputType="number"
                    android:imeActionLabel="下一行"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textTitle" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line"
            android:orientation="horizontal"
            android:padding="@dimen/x5"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:paddingBottom="@dimen/x8"
                android:paddingLeft="@dimen/x8"
                android:paddingTop="@dimen/x8"
                android:text="手机号"
                android:textColor="@color/textPuTong"
                android:textSize="17dp"

                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_img_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.7">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tiet_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:imeActionLabel="下一行"
                    android:imeOptions="actionNext"
                    android:textColor="@color/textTitle" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line"
            android:orientation="horizontal"
            android:padding="@dimen/x5"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:paddingBottom="@dimen/x8"
                android:paddingLeft="@dimen/x8"
                android:paddingTop="@dimen/x8"
                android:text="就诊卡号"
                android:textColor="@color/textPuTong"
                android:textSize="17dp"

                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_card_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.7">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tiet_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="right"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:textColor="@color/textTitle"

                    />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_new"
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x50"
            android:layout_marginTop="@dimen/x5"
            android:layout_gravity="center"
            android:background="@drawable/touch_btn_selector"
            android:text="新增"
            android:textColor="@color/white"
            />

    </LinearLayout>

</ScrollView>
