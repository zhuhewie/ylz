<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_line"
    android:orientation="horizontal"
    android:padding="@dimen/x5">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_patient"
        android:layout_width="@dimen/x55"
        android:layout_height="@dimen/x55"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        fresco:placeholderImage="@mipmap/huanzhe_image"
        fresco:roundAsCircle="true" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorSplitLine" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x5"
        android:paddingLeft="@dimen/x10"
        android:paddingTop="@dimen/x5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="@dimen/x70"
                android:layout_height="match_parent"
                android:text="姓名"
                android:textColor="@color/black"
                android:textSize="@dimen/x15" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_sex"
                android:layout_width="@dimen/x30"
                android:layout_height="match_parent"
                fresco:placeholderImage="@mipmap/body_ico_male" />

            <TextView
                android:id="@+id/tv_pat_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_write_red_border"
                android:gravity="center"
                android:paddingLeft="@dimen/x5"
                android:paddingRight="@dimen/x5"
                android:text="住院中"
                android:textColor="@color/colorFF0C55" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="23岁" />


    </LinearLayout>


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_next"
        android:layout_width="@dimen/x18"
        android:layout_height="@dimen/x50"
        fresco:placeholderImage="@mipmap/body_ico_next_2x" />


</LinearLayout>
