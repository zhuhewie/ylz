<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rectangle_with_corners"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="时间" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:paddingBottom="20dp">


        <TextView
            android:id="@+id/start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_with_stroke_only"
            android:gravity="center"
            android:text="开始日期"
            android:layout_marginRight="5dp"
            />

        <View

            android:layout_width="5dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorSplitLine" />

        <TextView
            android:id="@+id/end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_with_stroke_only"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:text="结束日期" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/text_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/touch_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/textPuTong" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorSplitLine" />

        <Button
            android:id="@+id/text_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/touch_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/textDialogOk" />

    </LinearLayout>

</LinearLayout>
