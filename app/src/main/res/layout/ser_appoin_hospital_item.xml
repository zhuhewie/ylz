<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x80"
    android:paddingLeft="@dimen/x7"
    android:paddingRight="@dimen/x5"
    android:layout_marginBottom="1dp"
    android:layout_gravity="center_vertical"
    android:background="@drawable/touch_bg"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/image_hospital_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/x5"
        android:src="@mipmap/qing_yuan_shi_renmin_yi_yuan_2x"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorSplitLine"
        android:layout_marginTop="@dimen/x5"
        android:layout_marginBottom="@dimen/x5"
        
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/x5"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/text_hospital_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="@dimen/x3"
            android:gravity="bottom"
            android:textColor="@color/textTitle"
            android:text="清远市中医院"
            />
        <TextView
            android:id="@+id/text_hospital_lv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/x3"
            android:text="三级甲等"
            android:textColor="@color/textPuTong"
            />


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/body_ico_next_2x"

        />

</LinearLayout>
