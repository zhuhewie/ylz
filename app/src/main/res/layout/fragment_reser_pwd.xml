<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ylzpatient.hq.zz.com.yilianzhongpatient.fragment.layout.me.ResetPwdFragment">

    <LinearLayout 
        android:id="@+id/activity_reset_pwd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include layout="@layout/top_layout_1" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="请输入新密码"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_pwd_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_pwd_sure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="请确认新密码"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x35"
            android:layout_marginTop="@dimen/x5"
            android:padding="@dimen/x10"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:text="确定"
            android:textColor="@color/white"
            android:background="@drawable/touch_btn_selector"

            />


    </LinearLayout>


</FrameLayout>
